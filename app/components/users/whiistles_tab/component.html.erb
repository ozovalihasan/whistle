<% if @tab_presenter.show_form? %>
  <% user = @tab_presenter.user %>

  <%= 
    render component(
      "whiistles/form_opening_modal", 
      label: "Whiistle to #{user.fullname}", 
      value: "@#{user.username} ", 
      whiistle: @tab_presenter.new_whiistle, 
      path: new_user_whiistle_path(user)
    ) 
  %>
<% end %>

<% if @paginated_whiistles.record_exist? %>
  <%= render component("users/paginated_whiistles", paginated_whiistles: @paginated_whiistles, current_user_presenter: @current_user_presenter) %>
<% else %>
  <%= @tab_presenter.no_whiistle_info %>
<% end %>