<div class="flex w-full">
  <%= link_to user_whiistles_path(@user), class:"hover-image" do %>
    <div class="px-4 py-2 flex w-full">
      <%= render component("users/profile_image", user: @user) %>
      <div class="pl-2 flex flex-col self-center">
        <div class="text-ellipsis">
          <%= @user.fullname %>
        </div>
        <div class=" text-ellipsis">
          @<%= @user.username %>
        </div>
      </div>
    </div>
  <% end %>

  <% unless @user.is_followed_by_cur_user %>
    <%= render component("users/follow_button", user: @user) %>
  <% end %>
</div>