<div>
  <%= link_to whiistle_path(@whiistle) do %>
    <%= @whiistle.body  %>
  <% end %>
  
  <% if @show_pictures %>
    <%= render Whiistles::Pictures::Component.new(whiistle: @whiistle) %>
  <% end %>
  
  <% if @whiistle.quoted_whiistle && @show_quoted_whiistle %>
    <%= render Whiistles::QuotedWhiistle::Component.new(whiistle: @whiistle.quoted_whiistle) %>
  <% end %>
</div>