<div class="self-center py-12">

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for resource, html: { class: "w-96" }, url: registration_path(resource_name) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.input :username, required: true %>
    <%= f.input :fullname, required: true %>
    <%= f.input :email, placeholder: 'example@example.com' %>
    
    <div class="flex py-2">
      <%= f.label :cover_image, class: "mr-auto" %>
      <%= f.input :cover_image, as: :file, label: "Choose", wrapper: :file_wrapper %>
    </div>

    <div class="flex py-2">
      <%= f.label :profile_picture, class: "mr-auto" %>
      <%= f.input :profile_picture, as: :file, label: "Choose", wrapper: :file_wrapper %>
    </div>

    <%= f.submit "Update" %>
    
  <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { turbo_confirm: "Are you sure?" }, method: :delete %></p>

</div>