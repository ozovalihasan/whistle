<% show_parent = local_assigns.fetch(:show_parent, true) %>

<% if show_parent && (whiistle.is_a?(Reply) || whiistle.is_a?(Flood) ) %>
  <%= render "whiistles/whiistle", whiistle: whiistle.whiistle %>
<% end %>

<div class="my-4">

  <%= render "whiistles/rewhiistle_info", whiistle: whiistle %>

  <div class='flex  <%= check_click(whiistle) %> '>
    
    <%= render "whiistles/profile_image", user: whiistle.user %>
    
    <div class="pl-2">
      <%= render "whiistles/user_names", user: whiistle.user %>
      
      <%= link_to whiistle_path(whiistle) do %>
        - <%= distance_of_time_in_words(Time.now, whiistle.created_at, compact: true, highest_measure_only: true) %>    
      <% end %>

      <%= render "whiistles/reply_info", whiistle: whiistle %>
      
      <div class="mt-2">
        <%= render "whiistles/body_and_pictures", whiistle: whiistle %>
      </div>
      
      <%= render "whiistles/buttons", whiistle: whiistle %>
      
      <%= render "whiistles/flood_info", whiistle: whiistle %>

    </div>
  </div>
</div>