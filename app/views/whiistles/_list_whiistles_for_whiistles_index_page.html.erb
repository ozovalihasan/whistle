<div class="mt-3 ">
  <% whiistles.each do |whiistle|  %>

    <div class=" border p-2 border-solid">
      <% if whiistle.label == "primary_whiistle" && (whiistle.is_a? Reply) %>
      
        <div class="my-1">
          <i class="bi bi-chat " > 
            <%= whiistle.user.fullname %> replied
          </i>
        </div>    
      
        <%= render "whiistles/whiistle", whiistle: whiistle.whiistle %>  
        <%= render "whiistles/whiistle", whiistle: whiistle %>  

      <% else %>

        <%= render_whiistle_with_flood_info(whiistle) %>
      
      <% end %>
    </div>
    
  <% end %>
</div>
