<% if @whiistle.saved_changes? %>
  <%= turbo_stream.prepend "whiistles" do %>
    <%= render Whiistles::WhiistleWithFloodInfo::Component.new(whiistle: @whiistle) %>
  <% end %>

  <%= turbo_stream.replace "whiistles_counter" do %>
    <%= render Whiistles::WhiistlesCounter::Component.new(whiistles_count: @whiistles.size) %>

  <% end %>
  
<% end %>

<%= render Streams::UpdateFlashes::Component.new(notice: notice, alert: alert) %>