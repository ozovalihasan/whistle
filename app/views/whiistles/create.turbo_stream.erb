<% if @whiistle.saved_changes? %>
  <%= turbo_stream.prepend "whiistles" do %>
    <%= render Whiistles::WhiistleWithFloodInfoComponent.new(whiistle: @whiistle) %>
  <% end %>

  <%= turbo_stream.replace "whiistles_counter" do %>
    <%= render Whiistles::WhiistlesCounterComponent.new(whiistles_count: @whiistles.size) %>

  <% end %>
  
<% end %>

<%= turbo_stream.update "flashes" do %>
    <%= check_notice %>
    <%= check_alert %>
<% end %>