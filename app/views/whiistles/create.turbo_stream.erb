<% if @status.success? %>
  <%= turbo_stream.prepend "whiistles" do %>
    <%= render Whiistles::WhiistleWithFloodInfo::Component.new(whiistle: @whiistle, current_user_presenter: @current_user_presenter) %>
  <% end %>

  <%= turbo_stream.replace "whiistles_counter" do %>
    <%= render Whiistles::WhiistlesCounter::Component.new(whiistles_count: @whiistles_size) %>

  <% end %>
  
<% end %>

<%= render Streams::UpdateFlashes::Component.new(notice: notice, alert: alert) %>