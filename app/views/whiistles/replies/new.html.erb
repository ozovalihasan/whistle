<turbo-frame id=<%= modal_body_target %> >
  <div class='flex  <%= check_click(@whiistle) %> '>
    <%= render Users::ProfileImageButton::Component.new(user: @whiistle.user) %>
    
    <div class="pl-2">

      <%= render Whiistles::UserNamesWithTimestamp::Component.new(whiistle: @whiistle) %>
      
      <div class="mt-2">
        <%= render Whiistles::BodyAndPictures::Component.new(whiistle: @whiistle, show_pictures: false) %>
      </div>

      <%= render Whiistles::ReplyInfo::Component.new(whiistle: @whiistle) %>

    </div>
  </div>
  
  <%= 
    render Whiistles::Form::Component.new(
      form_url: whiistle_reply_index_url(@whiistle), 
      whiistle: @reply,
      label: "Whiistle your reply",
      enable_quoting_whiistle: true
    ) 
  %>
  
</turbo-frame>