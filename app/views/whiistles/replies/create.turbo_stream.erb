<% if @reply.saved_changes? %>
  <%= turbo_stream.update whiistle_reply_form_target(@whiistle) do %>
    <turbo-frame id=<%= whiistle_reply_form_target(@whiistle) %> >
    </turbo-frame>  
  <% end %>
  
  <%= turbo_stream.update whiistle_reply_counter_target(@whiistle) do %>
    <%= @reply.whiistle.replies.size %>
  <% end %>
  
  <%= turbo_stream.after whiistle_reply_form_target(@whiistle) do %>
    <%= render Whiistles::WhiistleWithFloodInfoComponent.new(whiistle: @reply) %>
  <% end %>



<% end %>

<%= render Streams::UpdateFlashesComponent.new(notice: notice, alert: alert) %>