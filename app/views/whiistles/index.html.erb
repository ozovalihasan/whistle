<div class='flex grow'>
    <div class='p-4 w-2/3'>

        <%= 
            render component(
                "whiistles/form_opening_modal", 
                label: "Whiistle something", 
                whiistle: @whiistle, 
                path: new_whiistle_path, 
                cur_user: current_user
            ) 
        %>
        
        <div class="p-4 mt-4">
            <%= render component("whiistles/whiistles_counter", whiistles_count: @paginate_whiistles.count) %>


            <%= render component("shared/infinite_scroll", paginate_records: @paginate_whiistles) do %>
                <%= render component "whiistles/list_paginated_whiistles", paginate_whiistles: @paginate_whiistles %>
            <% end %>
        </div>
    </div>
    <div class='w-1/3'>
        <h1 class="py-4 pl-4">Who To Follow</h1>
        <%= render components("users/user", @suggested_users) %>
    </div>
</div>
