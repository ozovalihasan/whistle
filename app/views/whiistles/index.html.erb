<div class='flex grow'>
    <div class='p-4 w-2/3'>

        <%= render component("whiistles/form_opening_modal", label: "Whiistle something", whiistle: @whiistle, path: new_whiistle_path, current_user_presenter: @current_user_presenter) %>
        
        <div class="p-4 mt-4">
            <%= render component("whiistles/whiistles_counter", whiistles_count: @paginated_whiistles.count) %>


            <%= render component("shared/infinite_scroll", paginated_records: @paginated_whiistles) do %>
                <%= render @paginated_whiistles.component_class.new whiistles: @paginated_whiistles.records, current_user_presenter: @current_user_presenter %>
            <% end %>
        </div>
    </div>
    <div class='w-1/3'>
        <h1 class="py-4 pl-4">Who To Follow</h1>
        <%= render components("users/user", @suggested_users, cur_user: current_user) %>
    </div>
</div>
