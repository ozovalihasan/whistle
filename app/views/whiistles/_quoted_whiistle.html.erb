<div class="p-2 my-2 border border-solid border-first flex rounded-md" >

    <%= link_to user_whiistles_path(whiistle.user), class: "hover-image" do %>
        <div>
            <%= image_tag( show_profile_picture(whiistle.user.profile_picture), size: '25x25') %>
        </div>
    <% end %>
    <div class="pl-2">
        <%= link_to user_whiistles_path(whiistle.user) do %>
            <span class="text-dark">
                <%= whiistle.user.fullname %>
            </span>
            @<%= whiistle.user.username %>
        <% end %>
        <%= link_to whiistle_path(whiistle), class: "block mt-2" do %>
            <%= whiistle.body  %>
        <% end %>
    </div>
</div>