<div class="mt-3 ">
    <% whiistles.includes(user:  [{ profile_picture_attachment: :blob }]).each do |w|  %>
        <div class='flex my-4 <%= check_click(w) %> '>
            <%= link_to user_path(w.user), class: "hover-image" do %>
                <div>
                    <%= image_tag( show_profile_picture(w.user.profile_picture), size: '50x50') %>
                </div>
            <% end %>
            <div class="pl-2">
                <%= link_to user_path(w.user) do %>
                    <span class="text-dark">
                        <%= w.user.fullname %>
                    </span>
                    @<%= w.user.username %>
                <% end %>
                <div class="mt-2">
                    <%= w.body  %>
                </div>
            </div>
        </div>
    <% end %>
</div>
