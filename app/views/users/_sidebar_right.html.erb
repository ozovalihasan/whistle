<div class='sidebar-right border-left flex-shrink-0 text-third'>
    <div class='text-center pt-4 '>
        <div class="flex ">
            <div class="flex items-center gap-4 align-items-center mx-auto text-xl">
                <div id="create_delete_relation">
                    <%= add_delete_following(@user, @relation) %>
                </div>
                <%= image_tag( show_profile_picture(@user.profile_picture), size: '50x50', class: 'rounded-full') %>
                <a href="#">
                    <i class="bi bi-list-ul"></i>
                </a>
            </div>
        </div>
        <div class="py-2">
            <%= @user.fullname %>
        </div>
        <div class="pb-3 ">
            @<%= @user.username %>
        </div>
    </div>
    <div class="flex w-full content-evenly">
        <div class="border border-x-0 text-center col-4 py-2 w-1/3">
            <div class="text-dark w-full">
                <%= @whiistles.size %>
            </div>
            <a href="#">
                <div>
                    Whiistles
                </div>
            </a>
        </div>
        <div class="border text-center col-4 py-2 w-1/3">
            <div class="text-dark w-full">
                <%= @followings.size %>
            </div>
            <a href="#">
                <div>
                    Followings
                </div>
            </a>
        </div>
        <div class="border border-x-0 text-center col-4 py-2 w-1/3">
            <div id=<%= dom_id @user, :followeds %> class="text-dark w-full">
                <%= @followeds.size %>
            </div>
            <a href="#">
                <div>
                    Followers
                </div>
            </div>
        </a>
    </div>
    <h1 class="py-4 pl-4 text-third-color border-bottom">Followed by</h1>
    <%= render 'list_users', users: @followeds  %>
</div>